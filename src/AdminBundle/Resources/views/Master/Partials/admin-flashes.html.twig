{% set sucess, notice, error =
    app.session.flashBag.get('sucess'),
    app.session.flashBag.get('notice'),
    app.session.flashBag.get('error') %}

{{ loadLibraries('toastr')|raw }}

{% if sucess is not empty %}
    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "2000",
                "hideDuration": "3000",
                "timeOut": "12000",
                "extendedTimeOut": "2000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            {% for sucess_message in sucess %}
                toastr.success('{{ sucess_message }}', '{{ 'admin.global.sucess'|trans({}, 'flashes') }}');
            {% endfor %}
        });
    </script>
{% elseif notice is not empty %}
    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "2000",
                "hideDuration": "3000",
                "timeOut": "12000",
                "extendedTimeOut": "2000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            {% for notice_message in notice %}
            toastr.info('{{ notice_message }}', '{{ 'admin.global.notice'|trans({}, 'flashes') }}');
            {% endfor %}
        });
    </script>
{% elseif error is not empty %}
    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "2000",
                "hideDuration": "3000",
                "timeOut": "12000",
                "extendedTimeOut": "2000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            {% for type, error_message in error %}
            toastr.error('{{ error_message }}', '{{ 'admin.global.error'|trans({}, 'flashes') }}');
            {% endfor %}
        });
    </script>
{% endif %}
