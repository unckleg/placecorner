<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>{% block title %}Place Corner - Administration{% endblock %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="Place Corner - Login " name="description" />
    <meta content="" name="author" />
    {% block stylesheets %}
        <link href="{{ absolute_url(asset('http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all')) }}" rel="stylesheet" />
        {% stylesheets output='assets/js/login.css'
            'skins/backend/assets/global/plugins/font-awesome/css/font-awesome.min.css'
            'skins/backend/assets/global/plugins/simple-line-icons/simple-line-icons.min.css'
            'skins/backend/assets/global/plugins/bootstrap/css/bootstrap.min.css'
            'skins/backend/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css'
            'skins/backend/assets/global/plugins/select2/css/select2.min.css'
            'skins/backend/assets/global/plugins/select2/css/select2-bootstrap.min.css'
            'skins/backend/assets/global/css/components.min.css'
            'skins/backend/assets/global/css/plugins.min.css'
            'skins/backend/assets/pages/css/login.min.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="shortcut icon" href="favicon.ico" />
</head>

<body class=" login">

<div class="logo">
    <a href="{{ url('homepage') }}">
        <img alt="" /> </a>
</div>

<div class="content">

    <form class="login-form" action="{{ path('admin_auth') }}" method="post">
        <input type="hidden" name="_target_path" value="{{ path('admin_dashboard') }}" />
        <h3 class="form-title font-green">Sign In</h3>
        {% if error %}
            <div class="alert alert-danger">
                <button class="close" data-close="alert"></button>
                <span> {{ error.message }} </span>
            </div>
        {% endif %}
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="text" placeholder="Username or Email"
                   autocomplete="off" id="username" name="_username" value="{{ last_username }}" /> </div>

        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <input class="form-control form-control-solid placeholder-no-fix" type="password"
                   autocomplete="off" placeholder="Password" id="password" name="_password" /> </div>

        <div class="form-actions">
            <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit' }}" class="btn green uppercase">Login</button>
            <label class="rememberme check mt-checkbox mt-checkbox-outline">
                <input type="checkbox" name="remember" value="1" />Remember
                <span></span>
            </label>
            <a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>
        </div>
    </form>


    <form class="forget-form" action="/" method="post">
        <h3 class="font-green">Forget Password ?</h3>
        <p> Enter your e-mail address below to reset your password. </p>
        <div class="form-group">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" /> </div>
        <div class="form-actions">
            <button type="button" id="back-btn" class="btn green btn-outline">Back</button>
            <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
        </div>
    </form>

</div>
<div class="copyright"> {{ 'now'|date('Y') }} Â© Place Corner  </div>
{% block javascripts %}
    {% javascripts output='assets/js/login.js'
        'skins/backend/assets/global/plugins/jquery.min.js'
        'skins/backend/assets/global/plugins/respond.min.js'
        'skins/backend/assets/global/plugins/bootstrap/js/bootstrap.min.js'
        'skins/backend/assets/global/plugins/js.cookie.min.js'
        'skins/backend/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js'
        'skins/backend/assets/global/plugins/jquery.blockui.min.js'
        'skins/backend/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js'
        'skins/backend/assets/global/plugins/jquery-validation/js/jquery.validate.min.js'
        'skins/backend/assets/global/plugins/jquery-validation/js/additional-methods.min.js'
        'skins/backend/assets/global/plugins/select2/js/select2.full.min.js'
        'skins/backend/assets/global/scripts/app.min.js'
        'skins/backend/assets/pages/scripts/login.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>