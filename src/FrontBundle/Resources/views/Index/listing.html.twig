{% extends('@Front/Master/Layouts/front.html.twig') %}

{% block content %}

    <div id="page-content">
        <div class="container">
            <ol class="breadcrumb">
                <ol class="breadcrumb" style="padding-top: 40px;">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active">Search</li>
                </ol>
            </ol>
            <div class="row">
                <div class="col-md-9 col-sm-9">
                    <section class="page-title">
                        <h1>Founded Results</h1>
                    </section>
                    <!--end section-title-->

                    <section>
                        <div class="search-results-controls clearfix">
                            <div class="pull-left">
                                <a href="" class="circle-icon"><i class="fa fa-th"></i></a>
                                <a href="" class="circle-icon active"><i class="fa fa-bars"></i></a>
                            </div>
                            <!--end left-->
                            <div class="pull-right">
                                <div class="input-group inputs-underline min-width-150px">
                                    <select class="form-control selectpicker" name="sort">
                                        <option value="">Sort by</option>
                                        <option value="1">Title</option>
                                        <option value="2">Distance</option>
                                    </select>
                                </div>
                            </div>
                            <!--end right-->
                        </div>
                        <!--end search-results-controls-->
                    </section>

                    <section>

                        {% if places is not empty %}
                            {% for place in places %}
                                <div class="item item-row" data-id="{{ place.id }}" data-latitude="{{ place.latitude }}" data-longitude="{{ place.longitude }}" style="height: auto !important;">
                                    <a href="{{ path('details', {'id': place.id}) }}">
                                        <div class="image bg-transfer">
                                            <img src="{{ asset(place.image) }}" alt="">
                                        </div>
                                        <!--end image-->
                                        <div class="map"></div>
                                        <div class="description">
                                            <h3>{{ place.title }}</h3>
                                            <h4>{{ place.address }}</h4>
                                            <div class="label label-default">{{ loop.index }}</div>
                                        </div>
                                        <!--end description-->
                                        <div class="additional-info">
                                            <div class="rating-passive" data-rating="{{ random(20) }}">
                                                <span class="stars"></span>
                                                <span class="reviews">{{ random(20) }} </span>
                                            </div>
                                        </div>
                                        <!--end additional-info-->
                                    </a>
                                    <div class="controls-more">
                                        <ul>
                                            <li><a href="#">Add to favorites</a></li>
                                            <li><a href="#">Add to watchlist</a></li>
                                            <li><a href="#" class="quick-detail">Quick detail</a></li>
                                        </ul>
                                    </div>
                                    <!--end controls-more-->
                                </div>
                            {% endfor %}
                        {% endif %}

                    </section>

                    {#<section>#}
                        {#<div class="center">#}
                            {#<nav aria-label="Page navigation">#}
                                {#<ul class="pagination">#}
                                    {#<li class="disabled previous">#}
                                        {#<a href="#" aria-label="Previous">#}
                                            {#<i class="arrow_left"></i>#}
                                        {#</a>#}
                                    {#</li>#}
                                    {#<li><a href="#">1</a></li>#}
                                    {#<li><a href="#">2</a></li>#}
                                    {#<li class="active"><a href="#">3</a></li>#}
                                    {#<li><a href="#">4</a></li>#}
                                    {#<li><a href="#">5</a></li>#}
                                    {#<li class="next">#}
                                        {#<a href="#" aria-label="Next">#}
                                            {#<i class="arrow_right"></i>#}
                                        {#</a>#}
                                    {#</li>#}
                                {#</ul>#}
                            {#</nav>#}
                        {#</div>#}
                    {#</section>#}
                </div>
                <!--end col-md-9-->

                <div class="col-md-3 col-sm-3">
                    <aside class="sidebar">
                        <section>
                            {% include('@Front/Index/forms/search.html.twig') %}
                        </section>
                    </aside>
                    <!--end sidebar-->
                </div>
                <!--end col-md-4-->
            </div>
            <!--end row-->
        </div>
        <!--end container-->
    </div>
{% endblock %}